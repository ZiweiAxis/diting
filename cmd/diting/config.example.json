{
  "proxy": {
    "listen": ":8081",
    "timeout_seconds": 30
  },
  "llm": {
    "provider": "anthropic",
    "base_url": "https://your-llm-api.example.com",
    "api_key": "your_llm_api_key",
    "model": "claude-haiku-3-5",
    "max_tokens": 1024,
    "temperature": 0.7
  },
  "feishu": {
    "enabled": true,
    "app_id": "your_feishu_app_id",
    "app_secret": "your_feishu_app_secret",
    "approval_user_id": "your_approval_user_id_or_leave_empty",
    "approval_timeout_minutes": 5,
    "use_message_reply": true,
    "poll_interval_seconds": 2,
    "chat_id": "your_feishu_chat_id_for_fallback"
  },
  "risk": {
    "dangerous_methods": ["DELETE", "PUT", "PATCH", "POST"],
    "dangerous_paths": ["/delete", "/remove", "/drop", "/destroy", "/clear", "/admin", "/production"],
    "auto_approve_methods": ["GET", "HEAD", "OPTIONS"],
    "safe_domains": ["api.github.com", "httpbin.org"]
  },
  "audit": {
    "log_file": "logs/audit.jsonl",
    "enabled": true
  }
}
